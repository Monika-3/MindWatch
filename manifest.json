{
  "manifest_version": 3,
  "name": "Mind Watch - YouTube Watch Time Tracker",
  "version": "1.1",
  "description": "Track your YouTube watch time by category",

  "permissions": ["storage"],
  "host_permissions": ["*://*.youtube.com/*"],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
